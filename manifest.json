{
    "manifest_version": 3,
    "name": "Clipper",
    "version": "1.0",
    "description": "Bypasses clipboard restrictions on webpages",
    "icons": {
      "48": "clipper.svg"
    },
    "homepage_url": "https://github.com/GNUGradyn/Clipper",
    "action": {
      "default_icon": "clipper.svg",
      "default_title": "Clipper",
      "default_popup": "popup/popup.html"
    },
    "permissions": [
      "tabs",
      "storage"
    ],
    "content_scripts": [
      {
          "matches": [
              "<all_urls>"
          ],
          "js": [
              "inject.js"
          ],
          "run_at": "document_start",
          "all_frames": true
      }
  ]
  }
  